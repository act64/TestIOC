<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="#88000000"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/corner_text_white_bg"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/gengduo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >
            <TextView 
                android:id="@+id/tv_weixinfriend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/foodweixinhaoyou"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="微信好友"
                />
            <TextView 
                  android:id="@+id/tv_weixinquan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/pengyouqian"
                android:textColor="@color/black"
                 android:gravity="center"
                android:text="朋友圈"
                />
            <!--<TextView -->
                  <!--android:id="@+id/tv_sina"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:drawableTop="@drawable/xinlang"-->
                <!--android:textColor="@color/black"-->
                 <!--android:gravity="center"-->
                <!--android:text="新浪微博"-->
                <!--/>-->
            <TextView 
                  android:id="@+id/tv_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/qqq"
                android:textColor="@color/black"
                 android:gravity="center"
                android:text="QQ好友"
                />
            
        </LinearLayout>
         <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/gengduo" />

         <TextView
             android:id="@+id/tv_cancel"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="25dp"
             android:layout_marginRight="25dp"
             android:layout_marginTop="15dp"
             android:background="@drawable/fenxiangcai"
             android:gravity="center"
             android:text="取消"
             android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>