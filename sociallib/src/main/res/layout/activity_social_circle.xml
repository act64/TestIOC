<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/social_main_new_headView"
    android:layout_width="match_parent"
    android:layout_height="218dp"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="14dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="24dp">

        <View
            android:id="@+id/social_view_log"
            android:layout_width="3dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:background="@color/text_bd7af8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="糖友圈子"
            android:textColor="@color/text_333333"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/social_main_mycircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="我的圈子"
                android:textColor="@color/text_999999"
                android:textSize="12sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/social_main_mycircle_icon"
                android:layout_width="6dp"
                android:layout_height="10dp"
                android:paddingTop="1dp"
                android:src="@drawable/social_right_jiantou" />
        </LinearLayout>
    </RelativeLayout>

    <com.jkyshealth.view.UnScrollGridView
        android:id="@+id/social_main_gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:cacheColorHint="@color/white"
        android:horizontalSpacing="10dp"
        android:listSelector="@color/transparent"
        android:numColumns="2"
        android:verticalSpacing="10dp"></com.jkyshealth.view.UnScrollGridView>
</LinearLayout>